<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/common_course_count_bg"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/common_grey"
        android:text="选择时间"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/common_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.juziwl.commonlibrary.view.PickerView
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="4"
            />

        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="-"
            />

        <com.juziwl.commonlibrary.view.PickerView
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            />

        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="-"
            />

        <com.juziwl.commonlibrary.view.PickerView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            />

        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            />

        <com.juziwl.commonlibrary.view.PickerView
            android:id="@+id/hour"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            />

        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text=":"
            />

        <com.juziwl.commonlibrary.view.PickerView
            android:id="@+id/minute"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/common_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/common_selector_left_button"
            android:textSize="20sp"
            android:textColor="@color/common_grey"
            android:text="@string/common_cancel"
            />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d0cccc"
            />

        <Button
            android:id="@+id/make_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:textSize="20sp"
            android:textColor="@color/common_main_color"
            android:text="@string/common_make_sure"
            />
    </LinearLayout>

</LinearLayout>
