<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/alertdialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/transparent"
    >

    <LinearLayout
        android:id="@+id/llSuccessBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dip20"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/common_corner_btn_white_normal"
        >

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/common_black"
            android:text="@string/common_kindly_reminder"
            />

        <LinearLayout
            android:id="@+id/llUpdateInfos"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/tvPromptMsg"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dip10"
                android:layout_marginRight="@dimen/common_dip10"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/common_postcomment_bg"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:singleLine="true"
                android:maxLines="1"
                android:maxLength="15"
                android:digits="@string/common_filter_vcode"
                android:textColor="@color/common_black_light"
                android:hint="卡券码"
                />

            <TextView
                android:id="@+id/tv_content"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dip10"
                android:layout_marginRight="@dimen/common_dip10"
                android:layout_marginBottom="@dimen/common_dip10"
                android:textSize="12sp"
                android:textColor="@color/common_account_orange"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@mipmap/common_line"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_dip14"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnSure"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_dip10"
                android:paddingRight="@dimen/common_dip10"
                android:paddingTop="@dimen/common_dip8"
                android:paddingBottom="@dimen/common_dip8"
                android:gravity="center"
                android:background="@drawable/common_selector_btn_blue"
                android:textSize="@dimen/common_sp16"
                android:textColor="@color/common_white"
                android:text="点击验证"
                />

            <Button
                android:id="@+id/btnCancle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingLeft="@dimen/common_dip10"
                android:paddingRight="@dimen/common_dip10"
                android:paddingTop="@dimen/common_dip8"
                android:paddingBottom="@dimen/common_dip8"
                android:gravity="center"
                android:background="@drawable/common_selector_btn_gray"
                android:textSize="@dimen/common_sp16"
                android:textColor="@color/common_color_gray"
                android:text="返回"
                />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
